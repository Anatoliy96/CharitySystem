@model AidSystemDAL.Models.Activity;


<head>
    <!-- JS -->
    <link rel="stylesheet" href="~/js/AddMember.js">
    
    <!-- Style -->
    <link rel="stylesheet" href="~/css/AddMember.css">
  </head>

@using (Html.BeginForm("AddActivity", "Activity"))
{
<div class="container-fluid px-1 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
            <div class="card">
                <h5 class="text-center mb-4">Добави дейност</h5>
                <form class="form-card" onsubmit="event.preventDefault()">
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-6 flex-column d-flex"> 
                            <label class="form-control-label px-3">Name</label> 
                            <input type="text" id="name" name="Name" placeholder="Enter your name" onblur="validate(1)"> 
                        </div>
                        <div class="form-group col-sm-6 flex-column d-flex"> 
                            <label class="form-control-label px-3">Date</label> 
                            <input type="date" id="date" name="Date" placeholder="Enter date" onblur="validate(2)"> 
                        </div>
                        <div class="form-group col-sm-6 flex-column d-flex">
                           <label class="form-control-label px-3">From Hour</label> 
                           <input type="time" id="fromhour" name="FromHour" placeholder="Enter start hour" onblur="validate(3)"> 
                       </div>
                       <div class="form-group col-sm-6 flex-column d-flex">
                           <label class="form-control-label px-3">To Hour</label> 
                           <input type="time" id="tohour" name="ToHour" placeholder="Enter code" onblur="validate(4)"> 
                       </div>
                    </div>
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-6 flex-column d-flex">
                           <label class="form-control-label px-3">Регион</label>
                           <input type="text" id="region" name="Region" placeholder="" onblur="validate(5)"> 
                       </div>
                       <div class="form-group col-sm-6 flex-column d-flex">
                           <label class="form-control-label px-3">Уникален код</label>
                           <input type="text" id="uniquecode" name="UniqueCode" placeholder="" onblur="validate(5)"> 
                       </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="form-group col-sm-6"> <button type="submit" class="btn-block btn-primary">Добави</button>
                            </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
}

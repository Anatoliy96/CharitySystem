<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AidSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AidSystem.styles.css" asp-append-version="true" />
    
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">

    <link rel="stylesheet" href="~/fonts/icomoon/style.css"/>

    <link rel="stylesheet" href="~/css/owl.carousel.min.css" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    
    <!-- Style -->
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
   
    <div class="site-mobile-menu">
      <div class="site-mobile-menu-header">
        <div class="site-mobile-menu-close mt-3">
          <span class="icon-close2 js-menu-toggle"></span>
        </div>
      </div>
      <div class="site-mobile-menu-body"></div>
    </div>
    <header class="site-navbar" role="banner">

      <div class="container">
        <div class="row align-items-center">
          <div class="col-12 col-md-10 d-none d-xl-block">
            <nav class="site-navigation position-relative text-right" role="navigation">

              <ul class="site-menu js-clone-nav mr-auto d-none d-lg-block">
                <li class="active"><a asp-area="" asp-controller="Home" asp-action="Index"><span>Home</span></a></li>
                <li class="has-children">
                  <a><span>Участници</span></a>
                  <ul class="dropdown arrow-top">
                    <li><a asp-area="" asp-controller="Member" asp-action="ViewAllMembers">Всички участници</a></li>
                    <li><a asp-area="" asp-controller="Member" asp-action="AddMember">Добави участник</a></li>
                    <li><a href="#">Menu Three</a></li>
                  </ul>
                </li>
                <li class="has-children">
                  <a><span>Организации</span></a>
                  <ul class="dropdown arrow-top">
                    <li><a asp-area="" asp-controller="Organization" asp-action="ViewAllOrganizations">Всички организации</a></li>
                    <li><a asp-area="" asp-controller="Organization" asp-action="AddOrganization">Добави организация</a></li>
                    <li><a href="#">Menu Three</a></li>
                  </ul>
                </li>
                <li class="has-children">
                  <a><span>Дейности</span></a>
                  <ul class="dropdown arrow-top">
                    <li><a asp-area="" asp-controller="Activity" asp-action="ViewAllActivities">Всички дейност</a></li>
                    <li><a asp-area="" asp-controller="Activity" asp-action="AddActivity">Добави дейност</a></li>
                    <li><a href="#">Menu Three</a></li>
                  </ul>
                </li>
                <li><a asp-area="" asp-controller="Authentication" asp-action="Login"><span>Влез</span></a></li>
                <li><a asp-area="" asp-controller="Authentication" asp-action="Register"><span>Регистрация</span></a></li>
              </ul>
            </nav>
          </div>

          </div>

        </div>
      
    </header>
  
    <div class="row">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.sticky.js"></script>
    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - AidSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
</html>

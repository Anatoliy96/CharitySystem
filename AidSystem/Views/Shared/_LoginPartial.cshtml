@using Microsoft.AspNetCore.Identity
@using AidSystemDAL.Models.Authentication

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li class="active">
        <a id="manage" class="has-children" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="active">
        <form id="logoutForm" class="has-children" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="has-children">Logout</button>
        </form>
    </li>
}
else
{
    <li><a class="active" id="register" asp-area="Identity" asp-page="/Account/Register"><span>Регистрация</span></a></li>
    <li><a class="active" id="login" asp-area="Identity" asp-page="/Account/Login"><span>Влез</span></a></li>
}


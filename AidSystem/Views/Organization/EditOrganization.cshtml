@model AidSystemDAL.Models.Organization

<head>
    <!-- JS -->
    <link rel="stylesheet" href="~/js/AddMember.js">
    
    <!-- Style -->
    <link rel="stylesheet" href="~/css/AddMember.css">
  </head>


<div class="container-fluid px-1 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
            <div class="card">
                <h5 class="text-center mb-4">Промени участник</h5>
                @using (Html.BeginForm("EditOrganization", "Organization",FormMethod.Post,
                       new { enctype = "multipart/form-data" }))
                {
                <form asp-action="EditOrganization" class="form-card" onsubmit="event.preventDefault()">
                    <div class="row justify-content-between text-left">
                        <div>
                             <input type="hidden" asp-for="ID" class="form-control"/>
                <span asp-validation-for="ID" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6 flex-column d-flex"> 
                            <label for="Name" class="form-control-label px-3">Name</label> 
                            <input type="text" id="name" name="Name" value="@Model.Name" placeholder="Enter your first name" onblur="validate(1)"> 
                        </div>
                        <div class="form-group col-sm-6 flex-column d-flex"> 
                            <label for="Address" class="form-control-label px-3">Address</label> 
                            <input type="text" id="address" name="Address" value="@Model.Address" placeholder="Enter your second name" onblur="validate(2)"> 
                        </div>
                        <div class="form-group col-sm-6 flex-column d-flex">
                           <label for="Activity" class="form-control-label px-3">Activity</label> 
                           <input type="text" id="activity" name="Activity" value="@Model.Activity" placeholder="Enter your last name" onblur="validate(3)"> 
                       </div>
                       <div class="form-group col-sm-6 flex-column d-flex">
                           <label for="CoverageOfAreas" class="form-control-label px-3">Код</label> 
                           <input type="text" id="coverageofareas" name="CoverageOfAreas" value="@Model.CoverageOfAreas" placeholder="Enter code" onblur="validate(4)"> 
                       </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="form-group col-sm-6"> <button type="submit" class="btn-block btn-primary">Промени</button>
                            </div>
                    </div>
                </form>
                }
            </div>
        </div>
    </div>
</div>
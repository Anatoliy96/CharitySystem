@model IEnumerable<AidSystemDAL.Models.Organization>


@{
    ViewData["Title"] = "ViewAllOrganizations";
}
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    
    <!-- Style -->
    <link rel="stylesheet" href="~/css/table.css">

    
  </head>
  <body>
  <div class="content">
        <div class="container">

      <div class="table-responsive">
                    <table class="table table-striped custom-table">
                        <thead>
                            <tr>
                                <th scope="col">Номер</th>
                                <th scope="col">Име</th>
                                <th scope="col">Адрес</th>
                                <th scope="col">Активност</th>
                                <th scope="col">Покритие на области</th>
                                <th scope="col">Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var o in Model)
                            {
                                <tr scope="row">
                                    <td>@o.ID</td>
                                    <td>@Html.ActionLink(o.Name, "EditOrganization", "Organization", new {id = o.ID})</td>
                                    <td>@o.Address</td>
                                    <td>@o.Activity</td>
                                    <td>@o.CoverageOfAreas</td>
                                    <td>@Html.ActionLink("Изтрии", "Delete", "Organization", new {id = o.ID})</td>
                                </tr>
                            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
  </body>
</html>
@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Apply for job by Colorlib</title>

    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">

    <!-- Main CSS-->
    <link href="~/css/Register.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="page-wrapper bg-dark p-t-100 p-b-50">
        <div class="wrapper wrapper--w900">
            <div class="card card-6">
                <div class="card-heading">
                    <h2 class="title">Register User</h2>
                </div>
                <div class="card-body">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        
                        <div class="form-row">
                            <div class="name">Email address</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-6" type="email" asp-for="Input.Email" placeholder="example@email.com">
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Password</div>
                            <div class="value">
                                <input class="input--style-6" type="password" asp-for="Input.Password" autocomplete="new-password">
                            </div>
                       </div>
                       <div class="form-row">
                            <div class="name">Confirm password</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-6" type="password" asp-for="Input.ConfirmPassword" autocomplete="new-password">
                                </div>
                            </div>
                        </div>
                
                <div class="card-footer">
                    <button class="btn btn--radius-2 btn--blue-2" type="submit" value="Register">Register</button>
                </div>
                </form>
            </div>
        </div>
    </div>
    </div>
    <!-- Jquery JS-->
    <script src="~/jquery/jqueryRegister.min.js"></script>


    <!-- Main JS-->
    <script src="~/js/Register.js"></script>

</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
